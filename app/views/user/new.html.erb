<div class="container" id="layout-user-new">
	<div>
		<%= form_for :user, :url => "/user", :html => {:class => "form-horizontal"} do |f| %>

			<div class="form-group">
				<%= f.label :name, '고객명', class: 'col-xs-3 control-label' %>
				<div class="col-xs-9">
					<%= f.text_field :name, class: 'form-control', placeholder: '고객명' %>
				</div>
			</div>

			<div class="form-group">
				<%= f.label :phone_number, '전화번호', class: 'col-xs-3 control-label' %>
				<div class="col-xs-3">
					<%= f.text_field :phone_number_1, class: 'form-control', 'data-type' => 'phone_number', placeholder: 'xxx' %>
				</div>
				<div class="col-xs-3">
					<%= f.text_field :phone_number_2, class: 'form-control', 'data-type' => 'phone_number', placeholder: 'xxxx' %>
				</div>
				<div class="col-xs-3">
					<%= f.text_field :phone_number_3, class: 'form-control', 'data-type' => 'phone_number', placeholder: 'xxxx' %>
				</div>
			</div>

			<div class="form-group">
				<label class="col-xs-3 control-label">추천인 검색</label>
				<div class="col-xs-4">
					<input type="text" class="form-control" id="new-recommender-name" placeholder="이름">
				</div>
				<div class="col-xs-4">
					<input type="text" class="form-control" id="new-recommender-token" placeholder="전화번호 뒷자리">
				</div>
				<div class="col-xs-1">
					<a class="btn btn-info" id="new-search-user">
						<i class="fa fa-search" data-toggle=true></i>
						<i class="fa fa-spinner fa-spin" style="display: none" data-toggle=true></i>
					</a>
				</div>
			</div>

			<div class="row">
				<div class="col-xs-9 col-xs-offset-3">
					<div class="list-group" id="new-result-panel">
					</div>
				</div>
			</div>

			<%= f.hidden_field :recommender %>

			<div class="form-group pull-right">
		    <div class="col-xs-offset-3 col-xs-9">
		      <%= f.submit '등록', class: 'btn btn-primary' %>
		    </div>
		  </div>

		<% end %>
	</div>
</div>